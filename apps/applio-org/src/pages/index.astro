---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  {/* floating banner */}
  <div class="fixed top-3 left-1/2 transform -translate-x-1/2 z-50">
    <a
      href="https://getdione.app"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 px-3 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-300 rounded-full border border-white/10 whitespace-nowrap"
    >
      <img src="/Dio.svg" alt="Dio" class="w-4 h-4" />
      <span class="text-white font-medium text-xs">
        Check out new project!
      </span>
      <svg
        class="w-3 h-3 text-neutral-200"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        ></path>
      </svg>
    </a>
  </div>

  {/* background glow effect */}
  <div class="fixed inset-0 flex justify-center items-center">
    <div
      class="bg-white/5 h-[50vh] w-[50vh] rounded-full blur-3xl animate-spin"
    >
    </div>
  </div>

  {/* main content */}
  <div
    class="relative flex flex-col items-center justify-center min-h-[100dvh] px-6 py-16"
  >
    <h1
      class="text-6xl md:text-7xl xl:text-8xl font-bold text-white tracking-tight animate-fade-in"
    >
      Applio
    </h1>

    <h2 class="mt-6 mb-10 max-w-xl text-center text-lg text-neutral-200">
      A simple, high-quality voice conversion tool focused on ease of use and
      performance.
    </h2>

    <div class="flex gap-4 items-center">
      <a
        href="/donate"
        target="_blank"
        class="flex items-center justify-center w-12 h-12 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-300"
      >
        <svg
          class="w-5 h-5"
          viewBox="0 0 26 23"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M9.52545 4.69992e-05C7.29182 -0.0114129 5.11727 2.07428 6.11 4.66421H2.36364C1.73676 4.66421 1.13556 4.90569 0.692293 5.33552C0.249025 5.76534 0 6.34832 0 6.95619V9.24816C0 9.55209 0.124513 9.84358 0.346146 10.0585C0.56778 10.2734 0.86838 10.3941 1.18182 10.3941H11.8182V6.95619H14.1818V10.3941H24.8182C25.1316 10.3941 25.4322 10.2734 25.6539 10.0585C25.8755 9.84358 26 9.55209 26 9.24816V6.95619C26 6.34832 25.751 5.76534 25.3077 5.33552C24.8644 4.90569 24.2632 4.66421 23.6364 4.66421H19.89C21.2727 0.916837 16.0727 -1.73039 13.6736 1.50129L13 2.37224L12.3264 1.47837C11.5818 0.458442 10.5536 0.0115069 9.52545 4.69992e-05ZM9.45455 2.37224C10.5064 2.37224 11.0382 3.60991 10.2936 4.33188C9.54909 5.05385 8.27273 4.53815 8.27273 3.51823C8.27273 3.21429 8.39724 2.92281 8.61887 2.70789C8.84051 2.49298 9.14111 2.37224 9.45455 2.37224ZM16.5455 2.37224C17.5973 2.37224 18.1291 3.60991 17.3845 4.33188C16.64 5.05385 15.3636 4.53815 15.3636 3.51823C15.3636 3.21429 15.4881 2.92281 15.7098 2.70789C15.9314 2.49298 16.232 2.37224 16.5455 2.37224ZM1.18182 11.5401V20.708C1.18182 21.3159 1.43084 21.8989 1.87411 22.3287C2.31738 22.7585 2.91858 23 3.54545 23H22.4545C23.0814 23 23.6826 22.7585 24.1259 22.3287C24.5692 21.8989 24.8182 21.3159 24.8182 20.708V11.5401H14.1818V20.708H11.8182V11.5401H1.18182Z"
            fill="#FFFFFF"></path>
        </svg>
      </a>

      <a
        href="https://docs.applio.org/applio/getting-started/installation"
        target="_blank"
        class="px-8 py-3 bg-white text-black font-medium rounded-full hover:bg-neutral-200 transition-all duration-300"
      >
        Download
      </a>

      <a
        href="/discord"
        target="_blank"
        class="flex items-center justify-center w-12 h-12 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-300"
      >
        <svg
          class="w-5 h-5"
          viewBox="0 0 30 23"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
